---
import { Picture } from "astro:assets";
import heroImage from "assets/zru_logo_old.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block max-w-md mx-auto">
    <Picture
      src={heroImage}
      alt="Zurich R User Group"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      class="w-full h-auto"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Join the upcoming Event!
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      <b>Geospatial Data Analytics with R</b> @ WSL Zurich with world renowned Speaker
      Philip (Geo) Baumann
    </p>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Baumann will present his new R package `GeoR` which provides a new way for
      geospatial data users to visualize data in three dimensions
    </p>

    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <!-- <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" /> -->
        Sign up!
      </Link>
    </div>
  </div>
</main>
